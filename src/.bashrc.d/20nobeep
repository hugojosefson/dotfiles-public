# turn off terminal beep in X
if [ $TERM == "xterm" ] && [ -n "$DISPLAY" ]; then
	XSET=$(which xset 2> /dev/null)
	if [ -n "${XSET}" ]; then
		xset b off
	fi;
	unset XSET
fi

# turn of terminal beeps in the console, unless connecting via SSH
if [ -z "$SSH_CLIENT" ]; then
	if [ ! -z "$TERM" ]; then
		setterm -blength 0
	fi
fi
